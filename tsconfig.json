{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es6"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
  },
  "files": ["global.d.ts", "global.ts"],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
